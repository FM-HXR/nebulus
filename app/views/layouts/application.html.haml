!!!
%html
  %head
    %title Nebulus
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_pack_tag 'application'
  %header
    - unless user_signed_in? 
      = link_to "Sign In", new_user_session_path, class: "sign in"
      = link_to "Sign Up", new_user_registration_path, class: "sign up"
    - else
      = link_to "Sign Out", destroy_user_session_path, method: :delete, class: "sign in"
      = link_to "#{@user.username}", root_path, class: "show user"
  %body
    = yield